{
    "function": {
        "auth": {
            "build": true,
            "providerPlugin": "awscloudformation",
            "service": "Lambda",
            "dependsOn": []
        }
    },
    "api": {
        "auth": {
            "service": "AppSync",
            "providerPlugin": "awscloudformation",
            "output": {
                "authConfig": {
                    "defaultAuthentication": {
                        "authenticationType": "AWS_LAMBDA",
                        "lambdaAuthorizerConfig": {
                            "lambdaFunction": "auth",
                            "ttlSeconds": "300"
                        }
                    },
                    "additionalAuthenticationProviders": []
                }
            }
        }
    },
    "hosting": {
        "amplifyhosting": {
            "service": "amplifyhosting",
            "type": "cicd"
        }
    }
}